<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/colorPrimary"
        style="@style/TitleStyle.StatusBar">

        <View
            android:id="@+id/vBack"
            android:background="@drawable/btn_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>

    <View
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:padding="20dp"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:src="@drawable/new_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:text="Type your new password" />

        <EditText
            android:id="@+id/editPassword1"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:background="@drawable/corner_white_fill"
            android:layout_width="match_parent"
            android:textColorHint="@color/gravy"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="@string/password"
            android:textColor="@color/gravy_deep"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/editPassword2"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:hint="@string/confirm_pwd"
            android:textColorHint="@color/gravy"
            android:inputType="textPassword"
            android:background="@drawable/corner_white_fill"
            android:textColor="@color/gravy_deep"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/txtReset"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Reset"
            android:gravity="center"
            android:background="@drawable/corner_btn"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>