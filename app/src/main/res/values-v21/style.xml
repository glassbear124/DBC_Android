<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--沉浸式状态栏的主题-->
    <style name="ImmersiveStatusStyle">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:paddingTop">25dp</item>
    </style>
    <!--帶沉浸式狀態欄的标题栏style-->
    <style name="TitleStyle.StatusBar" parent="ImmersiveStatusStyle">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:stateListAnimator">@animator/raise</item>
    </style>

</resources>